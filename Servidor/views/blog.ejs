<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/styles.css">
  <title>Blog</title>
</head>
<body>
  <h1>Blog</h1>
  <a href="/cadastrar_post"><button>Criar novo post</button></a>

  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.titulo %></h2>
      <p><strong>Resumo:</strong> <%= post.resumo %></p>
      <p><%= post.conteudo %></p>
    </div>
  <% }); %>
</body>
</html>
