<h1>
    <%= resposta %>
</h1>
<h2>Bem-vindo, <%= nome %>!</h2>

<h3>Seus Carros:</h3>
<ul>
    <% if (carros.length===0) { %>
        <li>Você não tem carros cadastrados.</li>
        <% } else { %>
            <% carros.forEach(carro=> { %>
                <li>
                    <strong>
                        <%= carro.modelo %>
                    </strong> - Ano: <%= carro.ano %> - Quantidade: <%= carro.quantidade %>
                            <form action="/vender_carro" method="post" style="display:inline;">
                                <input type="hidden" name="carro_id" value="<%= carro._id %>">
                                <button type="submit">Vender</button>
                            </form>
                            <form action="/remover_carro" method="post" style="display:inline;">
                                <input type="hidden" name="carro_id" value="<%= carro._id %>">
                                <button type="submit">Remover</button>
                            </form>
                </li>
                <% }) %>
                    <% } %>
</ul>

<h3>Cadastrar Novo Carro</h3>
<form action="/cadastrar_carro" method="post">
    <input type="hidden" name="dono" value="<%= nome %>">
    <input name="modelo" placeholder="Modelo" required>
    <input name="ano" type="number" placeholder="Ano" required>
    <input name="quantidade" type="number" placeholder="Quantidade" required min="0">
    <button type="submit">Cadastrar</button>
</form>